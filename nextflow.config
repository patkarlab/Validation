trace {
	enabled = true
	file = './Final_Output/pipeline_trace.txt'
	fields = 'hash,task_id,name,status,exit,realtime,%cpu,rss'
}

process {
	// TODO nf-core: Check the defaults for all processes
	cpus   = { 1      * task.attempt }
	memory = { 6.GB   * task.attempt }
	time   = { 4.h    * task.attempt }

	errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
	maxRetries    = 1
	maxErrors     = '-1'

	withLabel:process_single {
		cpus   = { 1                   }
		memory = { 6.GB * task.attempt }
		time   = { 4.h   * task.attempt }	
	}
	withLabel:process_low {
		cpus   = { 8     * task.attempt }
		memory = { 12.GB * task.attempt }
		time   = { 8.h   * task.attempt }
	}
	withLabel:process_medium {
		cpus   = { 64     * task.attempt }
		memory = { 36.GB * task.attempt }
		time   = { 16.h   * task.attempt }
	}
	withLabel:process_high {
		cpus   = { 32    * task.attempt }
		memory = { 72.GB * task.attempt }
		time   = { 32.h   * task.attempt }
	}
	withLabel:process_long {
		cpus   = { 16    * task.attempt }
	}
	withLabel:process_high_memory {
		memory = { 200.GB * task.attempt }
	}
	withName:TRIM {
		container = 'quay.io/biocontainers/trimmomatic:0.39--hdfd78af_2'
	}
	withName:COVERAGE {
		container = 'quay.io/biocontainers/bedtools:2.31.1--h13024bc_3'
	}
	withName:FLT3_ITD_EXT {
		container = 'zhkddocker/flt3_itd_ext:v1.1'
	}
	withName:annovar {
		container = "bioinfochrustrasbourg/annovar:2018Apr16"
	}
}

profiles {
	docker {
		docker.enabled          = true 
		docker.runOptions = '-u $(id -u):$(id -g)'
	}
}
